.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

button {
  width: 80%;
  margin: 20rpx 0;
}

.cropper-wrapper {
  width: 750rpx;
  height: 750rpx;
  position: relative;
  margin-top: 40rpx;
}

.btn-group {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.preview {
  width: 300rpx;
  height: 300rpx;
  margin-top: 40rpx;
  border: 1px solid #ddd;
}