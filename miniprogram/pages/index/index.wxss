/* pages/index/index.wxss */
.page-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 40rpx 0;
  box-sizing: border-box;
}

/* 按钮基础样式 */
.button {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 32rpx;
  margin: 20rpx 0;
}

.btn-primary {
  background-color: #1aad19;
  color: white;
}

.btn-cancel {
  background-color: #f8f8f8;
  color: #333;
  border: 1px solid #ddd;
}

/* 主操作区 */
.action-section {
  width: 100%;
  margin-bottom: 40rpx;
}

/* 裁剪模块 */
.cropper-module {
  width: 100%;
  position: relative;
  /* 确保 we-cropper 容器有固定高度 */
  height: 750rpx;
  background-color: #000;
  margin-bottom: 40rpx;
  overflow: hidden;
}

/* 裁剪操作按钮 */
.cropper-actions {
  display: flex;
  justify-content: space-around;
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}

/* 预览区域 */
.preview-section {
  width: 100%;
  display: flex;
  justify-content: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.preview-image {
  width: 300rpx;
  height: 300rpx;
  border-radius: 16rpx;
  background-color: #eee;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}